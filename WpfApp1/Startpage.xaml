                            </StackPanel>
                            
                        </DataTemplate>
                        
                    </Button.ContentTemplate>
                    
                    <ContentPresenter RecognizesAccessKey="True" ></ContentPresenter>
                </Button>
            </Border>
        </ControlTemplate>
